<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="LB1_Calculator.Controller" hgap="10" vgap="10">
    <BorderPane prefWidth="10000">
        <top>
            <MenuBar fx:id="menuBar">
                <menus>
                    <Menu fx:id="propertiesMenu" text="Properties">
                        <items>
                            <MenuItem fx:id="backgroundColorItem" text="Background Color" onAction="#handleMenuItemClick"></MenuItem>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </top>
    </BorderPane>
</GridPane>